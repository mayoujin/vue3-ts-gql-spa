{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",
    "declaration": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noLib": false,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "sourceMap": false,
    "target": "esnext",
    "strict": false,
    "experimentalDecorators": true,
    "module": "esnext",
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "types",
      "src/types",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@ui/*": [
        "src/@ui/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@modules/*": [
        "src/@modules/*"
      ],
      "types/*": [
        "types/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "tests/**/*"
  ],
  "plugins": [
    {
      "name": "typescript-plugin-css-modules",
      "options": {
        "classnameTransform": "dashes",
        "customMatcher": "\\.m\\.p?css$"
      }
    }
  ]
}
